<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Remote_App_.App" xmlns:conv="clr-namespace:Remote_App_">
    <Application.Resources>
        <conv:ImageConv x:Key="Converter"></conv:ImageConv>
        <Style TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#1D1D1D"></Setter>
            <Setter Property="TextColor" Value="White"></Setter>
            <Setter Property="PlaceholderColor" Value="Wheat"></Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center"></Setter>
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="TextColor" Value="White"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#1D1D1D"></Setter>
            <Setter Property="TextColor" Value="White"></Setter>
        </Style>
    </Application.Resources>
</Application>